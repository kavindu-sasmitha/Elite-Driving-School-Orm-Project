<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="934.0" prefWidth="1160.0" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4b6584);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.controller.UserRegistrationController">
    <children>
        <VBox alignment="CENTER" layoutX="77.0" layoutY="135.0" prefHeight="711.0" prefWidth="1007.0" spacing="20.0" style="-fx-background-color: #353b48; -fx-background-radius: 12; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 12, 0, 0, 6);">
            <children>
                <Label style="-fx-text-fill: #ffffff; -fx-background-color: linear-gradient(to right, #6ab04c, #badc58); -fx-background-radius: 8; -fx-padding: 10 25;" text="User Registration">
                    <font>
                        <Font name="System Bold" size="26.0" />
                    </font>
                    <effect>
                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.25)" height="5.0" radius="4.0" width="0.0" />
                    </effect>
                </Label>

                <TextField fx:id="txtUsername" prefHeight="45.0" promptText="Username" style="-fx-background-color: #57606f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #54a0ff; -fx-padding: 0 12; -fx-font-size: 15px;">
                    <font>
                        <Font size="15.0" />
                    </font>
                </TextField>

                <PasswordField fx:id="txtPassword" prefHeight="45.0" promptText="Password" style="-fx-background-color: #57606f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #54a0ff; -fx-padding: 0 12; -fx-font-size: 15px;">
                    <font>
                        <Font size="15.0" />
                    </font>
                </PasswordField>

                <ComboBox fx:id="cmbRole" prefHeight="45.0" prefWidth="200.0" promptText="Select Role" style="-fx-background-color: #57606f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #54a0ff; -fx-font-size: 15px;" />

                <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#btnRegisterOnAction" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to right, #6ab04c, #badc58); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 15px;" text="Register">
                    <font>
                        <Font size="15.0" />
                    </font>
                    <effect>
                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.25)" height="6.0" radius="5.0" width="0.0" />
                    </effect>
                </Button>

                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#btnCancelOnAction" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to right, #eb3b5a, #fc5c65); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 15px;" text="Cancel">
                    <font>
                        <Font size="15.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                    <effect>
                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.25)" height="6.0" radius="5.0" width="0.0" />
                    </effect>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
