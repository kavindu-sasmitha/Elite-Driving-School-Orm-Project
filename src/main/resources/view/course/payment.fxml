<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom right, #55efc4, #ff6b6b);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.controller.PaymentController">
    <children>
        <Rectangle arcHeight="10.0" arcWidth="10.0" fill="linear-gradient(to bottom, #2d3436, #1e272e)" height="100.0" stroke="#34495e" strokeType="INSIDE" strokeWidth="0.0" width="1200.0">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.3)" height="8.0" radius="6.0" width="0.0" />
            </effect>
        </Rectangle>

        <Label layoutX="450.0" layoutY="25.0" text="PAYMENT MANAGEMENT" textFill="#ffffff">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
            <style>
                -fx-background-color: linear-gradient(to right, #00b894, #55efc4);
                -fx-padding: 8 20;
                -fx-background-radius: 10;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);
            </style>
        </Label>

        <VBox layoutX="50.0" layoutY="120.0" prefHeight="600.0" prefWidth="1100.0" spacing="30.0">
            <children>
                <VBox prefWidth="1100.0" spacing="15.0">
                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold; -fx-font-size: 24px;" text="Payment Records">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>

                    <TableView fx:id="paymentTbl" prefHeight="292.0" prefWidth="946.0" style="-fx-background-color: #f1f3f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #b2bec3;">
                        <columns>
                            <TableColumn fx:id="paymentIdCol" prefWidth="143.0" text="Payment ID">
                                <cellValueFactory>
                                    <PropertyValueFactory property="paymentId" />
                                </cellValueFactory>
                                <style>
                                    -fx-alignment: CENTER-LEFT;
                                    -fx-text-fill: #2d3436;
                                    -fx-background-color: #74b9ff;
                                    -fx-font-weight: bold;
                                    -fx-font-size: 14px;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="studentIdCol" prefWidth="163.0" text="Student ID">
                                <cellValueFactory>
                                    <PropertyValueFactory property="studentId" />
                                </cellValueFactory>
                                <style>
                                    -fx-alignment: CENTER-LEFT;
                                    -fx-text-fill: #2d3436;
                                    -fx-background-color: #74b9ff;
                                    -fx-font-weight: bold;
                                    -fx-font-size: 14px;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="studentNameCol" prefWidth="219.0" text="Student Name">
                                <cellValueFactory>
                                    <PropertyValueFactory property="studentName" />
                                </cellValueFactory>
                                <style>
                                    -fx-alignment: CENTER-LEFT;
                                    -fx-text-fill: #2d3436;
                                    -fx-background-color: #74b9ff;
                                    -fx-font-weight: bold;
                                    -fx-font-size: 14px;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="amountCol" prefWidth="213.0" text="Amount (LKR)">
                                <cellValueFactory>
                                    <PropertyValueFactory property="amount" />
                                </cellValueFactory>
                                <style>
                                    -fx-alignment: CENTER-LEFT;
                                    -fx-text-fill: #2d3436;
                                    -fx-background-color: #74b9ff;
                                    -fx-font-weight: bold;
                                    -fx-font-size: 14px;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="dateCol" prefWidth="150.0" text="Payment Date">
                                <cellValueFactory>
                                    <PropertyValueFactory property="paymentDate" />
                                </cellValueFactory>
                                <style>
                                    -fx-alignment: CENTER-LEFT;
                                    -fx-text-fill: #2d3436;
                                    -fx-background-color: #74b9ff;
                                    -fx-font-weight: bold;
                                    -fx-font-size: 14px;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="statusCol" prefWidth="210.0" text="Status">
                                <cellValueFactory>
                                    <PropertyValueFactory property="status" />
                                </cellValueFactory>
                                <style>
                                    -fx-alignment: CENTER-LEFT;
                                    -fx-text-fill: #2d3436;
                                    -fx-background-color: #74b9ff;
                                    -fx-font-weight: bold;
                                    -fx-font-size: 14px;
                                </style>
                            </TableColumn>
                        </columns>
                        <style>
                            -fx-control-inner-background: #ffffff;
                            -fx-accent: #0984e3;
                            -fx-selection-bar: #55efc4;
                            -fx-selection-bar-text: #2d3436;
                            -fx-font-size: 14px;
                        </style>
                    </TableView>
                </VBox>

                <VBox prefWidth="1100.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #dfe6e9; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 5);">
                    <children>
                        <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold; -fx-font-size: 22px;" text="Process Payment">
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                        </Label>

                        <HBox alignment="CENTER_LEFT" spacing="30.0">
                            <children>
                                <VBox prefWidth="350.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Search Student *">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <ComboBox fx:id="studentIdCmb" onAction="#onStudentIdSelected" prefHeight="40.0" prefWidth="200.0" promptText="Select Student ID" style="-fx-background-color: #f1f3f5; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-font-size: 14px;" />
                                    </HBox>
                                </VBox>

                                <VBox prefWidth="350.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Student Name">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="studentNameTxt" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #dfe6e9; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-padding: 0 12; -fx-font-size: 14px;" />
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="30.0">
                            <children>
                                <VBox prefWidth="250.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Total Fee (LKR)">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="totalFeeTxt" editable="false" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #dfe6e9; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-padding: 0 12; -fx-font-size: 14px;" />
                                </VBox>

                                <VBox prefWidth="250.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Already Paid (LKR)">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="alreadyPaidTxt" editable="false" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #dfe6e9; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-padding: 0 12; -fx-font-size: 14px;" />
                                </VBox>

                                <VBox prefWidth="250.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Balance (LKR)">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="balanceTxt" editable="false" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #dfe6e9; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-padding: 0 12; -fx-font-size: 14px;" />
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="30.0">
                            <children>
                                <VBox prefWidth="250.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Payment Amount (LKR) *">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="paymentAmountTxt" onKeyReleased="#onPaymentAmountTyped" prefHeight="40.0" prefWidth="250.0" promptText="0.00" style="-fx-background-color: #f1f3f5; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-padding: 0 12; -fx-font-size: 14px;" />
                                </VBox>

                                <VBox prefWidth="250.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Payment Date *">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <DatePicker fx:id="paymentDateDp" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #f1f3f5; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-font-size: 14px;" />
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="30.0" style="-fx-padding: 20 0 0 0;">
                            <children>
                                <Button fx:id="processPaymentBtn" onAction="#onProcessPaymentBtn" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 12 30; -fx-font-size: 16px;" text="Process Payment">
                                    <effect>
                                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.2)" height="5.0" radius="4.0" width="0.0" />
                                    </effect>
                                </Button>
                                <Button fx:id="generateReceiptBtn" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to right, #0984e3, #74b9ff); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 12 30; -fx-font-size: 16px;" text="Generate Receipt">
                                    <effect>
                                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.2)" height="5.0" radius="4.0" width="0.0" />
                                    </effect>
                                </Button>
                                <Button fx:id="clearBtn" onAction="#onClearBtn" prefHeight="50.0" prefWidth="140.0" style="-fx-background-color: linear-gradient(to right, #e17055, #d63031); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 12 30; -fx-font-size: 16px;" text="Clear">
                                    <effect>
                                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.2)" height="5.0" radius="4.0" width="0.0" />
                                    </effect>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>

        <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="750.0" prefHeight="50.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to right, #2d3436, #636e72); -fx-padding: 0 25;">
            <children>
                <Label fx:id="statusLbl" text="Status: Ready" textFill="#ffffff">
                    <font>
                        <Font name="System" size="14.0" />
                    </font>
                    <style>
                        -fx-padding: 5 15;
                        -fx-background-color: #00b894;
                        -fx-background-radius: 6;
                    </style>
                </Label>
                <Label fx:id="totalPaymentsLbl" text="Total Payments: 0" textAlignment="RIGHT" textFill="#ffffff" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System" size="14.0" />
                    </font>
                    <style>
                        -fx-padding: 5 15;
                        -fx-background-color: #0984e3;
                        -fx-background-radius: 6;
                    </style>
                    <HBox.margin>
                        <Insets right="25.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </children>
</AnchorPane>