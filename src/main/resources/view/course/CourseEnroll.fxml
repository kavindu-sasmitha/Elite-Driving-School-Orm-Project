<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom right, #6a82fb, #fc5c7d);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.controller.CourseEnrollController">
    <children>
        <Rectangle arcHeight="10.0" arcWidth="10.0" fill="linear-gradient(to bottom, #2c3e50, #1e272e)" height="100.0" stroke="#34495e" strokeType="INSIDE" strokeWidth="0.0" width="1200.0">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.3)" height="8.0" radius="6.0" width="0.0" />
            </effect>
        </Rectangle>

        <Label layoutX="450.0" layoutY="25.0" text="COURSE ENROLLMENT" textFill="#ffffff">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
            <style>
                -fx-background-color: linear-gradient(to right, #ff6b6b, #ff8e53);
                -fx-padding: 8 20;
                -fx-background-radius: 10;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);
            </style>
        </Label>

        <VBox layoutX="50.0" layoutY="120.0" prefHeight="600.0" prefWidth="1100.0" spacing="30.0">
            <children>
                <VBox prefHeight="604.0" prefWidth="1100.0" spacing="70.0" style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #dfe6e9; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 5);">
                    <children>
                        <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold; -fx-font-size: 24px;" text="New Enrollment">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <HBox alignment="CENTER_LEFT" spacing="40.0">
                            <children>
                                <VBox prefWidth="350.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Student ID *">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <TextField fx:id="studentIdTxt" onAction="#onStudentIdTyped" prefHeight="40.0" prefWidth="200.0" promptText="Enter Student ID" style="-fx-background-color: #f1f3f5; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-padding: 0 12; -fx-font-size: 14px;" />
                                        <Button fx:id="findStudentBtn" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #0984e3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-cursor: hand; -fx-padding: 10 20; -fx-font-size: 14px;" text="Find Student">
                                            <style>
                                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);
                                                -fx-background-color: linear-gradient(to right, #0984e3, #74b9ff);
                                            </style>
                                        </Button>
                                    </HBox>
                                </VBox>

                                <VBox prefWidth="350.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Student Name">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="studentNameTxt" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #dfe6e9; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-padding: 0 12; -fx-font-size: 14px;" />
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="40.0">
                            <children>
                                <VBox prefWidth="350.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Select Course *">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <ComboBox fx:id="selectCourseCmb" onAction="#onSelectCourse" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #f1f3f5; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-font-size: 14px;" />
                                </VBox>

                                <VBox prefWidth="350.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Course Fee">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="feeTxt" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #dfe6e9; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-padding: 0 12; -fx-font-size: 14px;" />
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="40.0">
                            <children>
                                <VBox prefWidth="250.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Enrollment Date *">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <DatePicker fx:id="enrollmentDateDp" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #f1f3f5; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-font-size: 14px;" />
                                </VBox>
                                <VBox prefWidth="250.0" spacing="8.0">
                                    <Label style="-fx-text-fill: #2d3436; -fx-font-weight: bold;" text="Duration (Months)">
                                        <font>
                                            <Font size="16.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="durationTxt" editable="false" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #dfe6e9; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #b2bec3; -fx-padding: 0 12; -fx-font-size: 14px;" />
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="50.0" style="-fx-padding: 20 0 0 0;">
                            <children>
                                <Button fx:id="enrollNowBtn" onAction="#onEnrollNowBtn" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 12 30; -fx-font-size: 16px;" text="Enroll Now">
                                    <effect>
                                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.2)" height="5.0" radius="4.0" width="0.0" />
                                    </effect>
                                </Button>
                                <Button fx:id="clearFormBtn" onAction="#onClearFormBtn" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to right, #e17055, #d63031); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 12 30; -fx-font-size: 16px;" text="Clear Form">
                                    <effect>
                                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.2)" height="5.0" radius="4.0" width="0.0" />
                                    </effect>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Current Enrollments Table -->
                <VBox prefWidth="1100.0" spacing="10.0" />
            </children>
        </VBox>

        <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="750.0" prefHeight="50.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to right, #2d3436, #636e72); -fx-padding: 0 25;">
            <children>
                <Label text="Status: Ready for enrollment" textFill="#ffffff">
                    <font>
                        <Font name="System" size="14.0" />
                    </font>
                    <style>
                        -fx-padding: 5 15;
                        -fx-background-color: #00b894;
                        -fx-background-radius: 6;
                    </style>
                </Label>
                <Label fx:id="enrollmentCountLbl" text="Total Enrollments: 0" textAlignment="RIGHT" textFill="#ffffff" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System" size="14.0" />
                    </font>
                    <style>
                        -fx-padding: 5 15;
                        -fx-background-color: #0984e3;
                        -fx-background-radius: 6;
                    </style>
                    <HBox.margin>
                        <Insets right="25.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </children>
</AnchorPane>