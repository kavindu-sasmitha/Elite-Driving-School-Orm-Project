<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.controller.LessonController">
    <children>
        <!-- Background Decorative Elements -->
        <Circle fill="#4caf50" layoutX="100.0" layoutY="150.0" opacity="0.06" radius="100.0" />
        <Circle fill="#ff9800" layoutX="1100.0" layoutY="650.0" opacity="0.05" radius="80.0" />
        <Rectangle arcHeight="0.0" arcWidth="0.0" fill="#2196f3" height="280.0" layoutX="950.0" layoutY="50.0" opacity="0.04" rotate="45.0" stroke="transparent" strokeType="INSIDE" strokeWidth="0.0" width="140.0" />

        <!-- Top Navigation Bar -->
        <Rectangle fill="rgba(255,255,255,0.95)" height="80.0" layoutX="0.0" layoutY="0.0" strokeType="INSIDE" strokeWidth="0.0" width="1200.0">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="#20000000" height="10.0" radius="8.0" spread="0.1" width="0.0" />
            </effect>
        </Rectangle>

        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="20.0" spacing="20.0">
            <children>
                <Circle fill="linear-gradient(to bottom right, #9c27b0 0%, #7b1fa2 100%)" radius="25.0">
                    <effect>
                        <DropShadow blurType="GAUSSIAN" color="#40000000" height="6.0" radius="4.0" width="0.0" />
                    </effect>
                </Circle>
                <VBox spacing="4.0">
                    <children>
                        <Label style="-fx-text-fill: #37474f; -fx-font-size: 28px; -fx-font-weight: 700; -fx-font-family: 'Segoe UI';" text="📚 Lesson Management" />
                        <Label style="-fx-text-fill: #78909c; -fx-font-size: 14px; -fx-font-weight: 400; -fx-font-family: 'Segoe UI';" text="Schedule and manage driving lessons" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Main Content Area -->
        <VBox layoutX="30.0" layoutY="100.0" prefHeight="650.0" prefWidth="1140.0" spacing="24.0">
            <children>
                <!-- Statistics Dashboard -->
                <HBox spacing="16.0" />

                <!-- Lesson Form -->
                <VBox spacing="0.0" style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 16, 0, 0, 4);">
                    <children>
                        <!-- Form Header -->
                        <HBox alignment="CENTER_LEFT" style="-fx-background-color: linear-gradient(to bottom right, #9c27b0 0%, #7b1fa2 100%); -fx-background-radius: 16 16 0 0; -fx-padding: 20 24;">
                            <children>
                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                    <image>

                                    </image>
                                </ImageView>
                                <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI'; -fx-padding: 0 0 0 12;" text="Lesson Details" />
                                <Region HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <!-- Form Content -->
                        <VBox spacing="24.0" style="-fx-padding: 32;">
                            <children>
                                <!-- First Row -->
                                <HBox spacing="24.0">
                                    <children>
                                        <VBox prefWidth="200.0" spacing="8.0">
                                            <Label style="-fx-text-fill: #495057; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI';" text="🆔 Lesson ID" />
                                            <TextField fx:id="txtId" editable="false" prefHeight="48.0" prefWidth="200.0" promptText="Auto-generated" style="-fx-background-color: #f8f9fa; -fx-text-fill: #495057; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-padding: 0 16; -fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" />
                                        </VBox>
                                        <VBox prefWidth="300.0" spacing="8.0">
                                            <Label style="-fx-text-fill: #495057; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI';" text="🆔 Student ID *" />
                                            <TextField fx:id="txtStudentId" prefHeight="48.0" prefWidth="300.0" promptText="Enter Student ID" style="-fx-background-color: #fafafa; -fx-text-fill: #37474f; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 0 16; -fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" />
                                        </VBox>
                                        <VBox prefWidth="300.0" spacing="8.0">
                                            <Label style="-fx-text-fill: #495057; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI';" text="📚 Course *" />
                                            <ComboBox fx:id="cmbCourse" prefHeight="48.0" prefWidth="300.0" promptText="Select course" style="-fx-background-color: #fafafa; -fx-text-fill: #37474f; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 0 16; -fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" />
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Second Row -->
                                <HBox spacing="24.0">
                                    <children>
                                        <VBox prefWidth="300.0" spacing="8.0">
                                            <Label style="-fx-text-fill: #495057; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI';" text="👨‍🏫 Instructor *" />
                                            <ComboBox fx:id="cmbInstructor" prefHeight="48.0" prefWidth="300.0" promptText="Select instructor" style="-fx-background-color: #fafafa; -fx-text-fill: #37474f; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 0 16; -fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" />
                                        </VBox>
                                        <VBox prefWidth="200.0" spacing="8.0">
                                            <Label style="-fx-text-fill: #495057; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI';" text="📅 Date *" />
                                            <DatePicker fx:id="DatePiker" prefHeight="48.0" prefWidth="200.0" style="-fx-background-color: #fafafa; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 0 16; -fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" />
                                        </VBox>
                                        <VBox prefWidth="200.0" spacing="8.0">
                                            <Label style="-fx-text-fill: #495057; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI';" text="⏰ Start Time *" />
                                            <TextField fx:id="txtStartTime" prefHeight="48.0" prefWidth="200.0" promptText="HH:MM (24-hour format)" style="-fx-background-color: #fafafa; -fx-text-fill: #37474f; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 0 16; -fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" />
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Action Buttons -->
                                <HBox alignment="CENTER" spacing="16.0" style="-fx-padding: 16 0 0 0;">
                                    <children>
                                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="48.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to bottom right, #4caf50 0%, #45a049 100%); -fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 15px; -fx-background-radius: 24; -fx-cursor: hand; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, rgba(76,175,80,0.3), 12, 0, 2, 6);" text="➕ Add Lesson" />
                                        <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="48.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to bottom right, #2196f3 0%, #1976d2 100%); -fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 15px; -fx-background-radius: 24; -fx-cursor: hand; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, rgba(33,150,243,0.3), 12, 0, 2, 6);" text="✏️ Update" />
                                        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="48.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to bottom right, #f44336 0%, #d32f2f 100%); -fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 15px; -fx-background-radius: 24; -fx-cursor: hand; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, rgba(244,67,52,0.3), 12, 0, 2, 6);" text="🗑️ Cancel" />
                                        <Button fx:id="btnReset" mnemonicParsing="false" onAction="#btnResetOnAction" prefHeight="48.0" prefWidth="120.0" style="-fx-background-color: #f8f9fa; -fx-text-fill: #6c757d; -fx-font-weight: 600; -fx-font-size: 15px; -fx-background-radius: 24; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 24; -fx-cursor: hand; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" text="🔄 Reset" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Lesson Records Table -->
                <VBox spacing="0.0" style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 16, 0, 0, 4);">
                    <children>
                        <!-- Table Header -->
                        <HBox alignment="CENTER_LEFT" style="-fx-background-color: linear-gradient(to bottom right, #9c27b0 0%, #7b1fa2 100%); -fx-background-radius: 16 16 0 0; -fx-padding: 20 24;">
                            <children>
                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                    <image>

                                    </image>
                                </ImageView>
                                <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI'; -fx-padding: 0 0 0 12;" text="Scheduled Lessons" />
                                <Region />
                                <HBox spacing="12.0">
                                    <children>
                                        <Label style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14px; -fx-font-weight: 400; -fx-font-family: 'Segoe UI';" text="Total Records:" />
                                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI'; -fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 20; -fx-padding: 6 16;" text="0" />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>

                        <!-- Lesson Table -->
                        <TableView fx:id="tblLesson" prefHeight="280.0" style="-fx-background-color: transparent; -fx-table-cell-border-color: #f0f0f0; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;">
                            <columns>
                                <TableColumn fx:id="colID" minWidth="100.0" prefWidth="120.0" text="🆔 Lesson ID">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="lessonId" />
                                    </cellValueFactory>
                                    <style>
                                        -fx-alignment: CENTER;
                                        -fx-background-color: linear-gradient(to bottom, rgba(156,39,176,0.1), rgba(156,39,176,0.05));
                                        -fx-text-fill: #4a148c;
                                        -fx-font-weight: 600;
                                        -fx-font-size: 13px;
                                    </style>
                                </TableColumn>
                                <TableColumn fx:id="colCourse" minWidth="200.0" prefWidth="220.0" text="📚 Course">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="courseName" />
                                    </cellValueFactory>
                                    <style>
                                        -fx-alignment: CENTER_LEFT;
                                        -fx-background-color: linear-gradient(to bottom, rgba(156,39,176,0.1), rgba(156,39,176,0.05));
                                        -fx-text-fill: #4a148c;
                                        -fx-font-weight: 600;
                                        -fx-font-size: 13px;
                                    </style>
                                </TableColumn>
                                <TableColumn fx:id="colInstructor" minWidth="180.0" prefWidth="200.0" text="👨‍🏫 Instructor">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="instructorName" />
                                    </cellValueFactory>
                                    <style>
                                        -fx-alignment: CENTER_LEFT;
                                        -fx-background-color: linear-gradient(to bottom, rgba(156,39,176,0.1), rgba(156,39,176,0.05));
                                        -fx-text-fill: #4a148c;
                                        -fx-font-weight: 600;
                                        -fx-font-size: 13px;
                                    </style>
                                </TableColumn>
                                <TableColumn fx:id="colDate" minWidth="140.0" prefWidth="160.0" text="📅 Date">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="date" />
                                    </cellValueFactory>
                                    <style>
                                        -fx-alignment: CENTER;
                                        -fx-background-color: linear-gradient(to bottom, rgba(156,39,176,0.1), rgba(156,39,176,0.05));
                                        -fx-text-fill: #4a148c;
                                        -fx-font-weight: 600;
                                        -fx-font-size: 13px;
                                    </style>
                                </TableColumn>
                                <TableColumn fx:id="colStartTime" minWidth="140.0" prefWidth="160.0" text="⏰ Start Time">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="scheduledTime" />
                                    </cellValueFactory>
                                    <style>
                                        -fx-alignment: CENTER;
                                        -fx-background-color: linear-gradient(to bottom, rgba(156,39,176,0.1), rgba(156,39,176,0.05));
                                        -fx-text-fill: #4a148c;
                                        -fx-font-weight: 600;
                                        -fx-font-size: 13px;
                                    </style>
                                </TableColumn>
                                <TableColumn fx:id="colStatus" minWidth="140.0" prefWidth="160.0" text="✅ Status">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="status" />
                                    </cellValueFactory>
                                    <style>
                                        -fx-alignment: CENTER;
                                        -fx-background-color: linear-gradient(to bottom, rgba(156,39,176,0.1), rgba(156,39,176,0.05));
                                        -fx-text-fill: #4a148c;
                                        -fx-font-weight: 600;
                                        -fx-font-size: 13px;
                                    </style>
                                </TableColumn>
                            </columns>
                            <style>
                                -fx-control-inner-background: white;
                                -fx-accent: linear-gradient(to bottom right, #9c27b0 0%, #7b1fa2 100%);
                                -fx-selection-bar: linear-gradient(to bottom right, #f3e5f5 0%, #e1bee7 100%);
                                -fx-selection-bar-text: #4a148c;
                                -fx-table-cell-border-color: #f5f5f5;
                                -fx-background-color: transparent;
                            </style>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>

        <!-- Status Bar -->
        <HBox alignment="BASELINE_CENTER" layoutX="0.0" layoutY="760.0" prefHeight="40.0" prefWidth="1200.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-padding: 0 24; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, -2);">
            <children>
                <HBox spacing="12.0">
                    <children>
                        <Circle fill="#4caf50" radius="6.0" />
                        <VBox spacing="2.0">
                            <children>
                                <Label style="-fx-text-fill: #1a1a1a; -fx-font-size: 14px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI';" text="Status: Ready" />
                                <Label style="-fx-text-fill: #666666; -fx-font-size: 12px; -fx-font-weight: 400; -fx-font-family: 'Segoe UI';" text="System operational - Last sync: 2 minutes ago" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox spacing="16.0">
                    <children>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>

                            </image>
                        </ImageView>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI'; -fx-background-color: rgba(156, 39, 176, 0.1); -fx-background-radius: 16; -fx-padding: 4 12;" text="Total Lessons: 0" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
