<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.controller.LoginController">
    <children>
        <!-- Background with subtle gradient -->
        <Rectangle height="500.0" width="700.0">
            <fill>
                <LinearGradient endX="1.0" endY="1.0" startX="0.0" startY="0.0">
                    <stops>
                        <Stop color="#f8f9fa" offset="0.0" />
                        <Stop color="#e9ecef" offset="1.0" />
                    </stops>
                </LinearGradient>
            </fill>
        </Rectangle>

        <!-- Decorative Background Elements -->
        <Circle fill="#4caf50" layoutX="80.0" layoutY="120.0" opacity="0.08" radius="100.0" />
        <Circle fill="#2196f3" layoutX="620.0" layoutY="380.0" opacity="0.06" radius="80.0" />
        <Rectangle arcHeight="0.0" arcWidth="0.0" fill="#ff9800" height="150.0" layoutX="550.0" layoutY="50.0" opacity="0.04" rotate="45.0" stroke="transparent" strokeType="INSIDE" strokeWidth="0.0" width="80.0" />

        <!-- Main Content Container -->
        <VBox alignment="CENTER" layoutX="100.0" layoutY="50.0" prefHeight="400.0" prefWidth="500.0" spacing="32.0">
            <children>
                <!-- Header Section -->
                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <!-- Logo/Icon -->
                        <Circle fill="linear-gradient(to bottom right, #4caf50 0%, #45a049 100%)" radius="48.0">
                            <effect>
                                <DropShadow blurType="GAUSSIAN" color="#40000000" height="8.0" radius="6.0" spread="0.1" width="0.0" />
                            </effect>
                        </Circle>

                        <!-- Title -->
                        <VBox spacing="8.0">
                            <children>
                                <Label style="-fx-text-fill: #1a1a1a; -fx-font-size: 32px; -fx-font-weight: 700; -fx-font-family: 'Segoe UI';" text="ðŸš— Elite Driving School" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Form Container -->
                <VBox alignment="CENTER" prefHeight="280.0" prefWidth="420.0" spacing="24.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 32; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 24, 0, 0, 8);">
                    <children>
                        <!-- Form Title -->
                        <Label style="-fx-text-fill: #37474f; -fx-font-size: 20px; -fx-font-weight: 600; -fx-font-family: 'Segoe UI'; -fx-alignment: center;" text="Welcome" />

                        <!-- Role Selection -->
                        <VBox spacing="8.0">
                            <Label style="-fx-text-fill: #546e7a; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI'; -fx-padding: 0 0 4 0;" text="ðŸŽ“ Role" />
                            <ComboBox fx:id="cmbRole" prefHeight="48.0" prefWidth="356.0" promptText="Select your role" style="-fx-background-color: #fafafa; -fx-text-fill: #37474f; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 0 16; -fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" />
                        </VBox>

                        <!-- Username Field -->
                        <VBox spacing="8.0">
                            <Label style="-fx-text-fill: #546e7a; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI'; -fx-padding: 0 0 4 0;" text="ðŸ‘¤ Username" />
                            <TextField fx:id="txtUserName" prefHeight="48.0" prefWidth="356.0" promptText="Enter your username" style="-fx-background-color: #fafafa; -fx-text-fill: #37474f; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 0 16; -fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" />
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="8.0">
                            <Label style="-fx-text-fill: #546e7a; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI'; -fx-padding: 0 0 4 0;" text="ðŸ”’ Password" />
                            <PasswordField fx:id="TxtPassword" prefHeight="48.0" prefWidth="356.0" promptText="Enter your password" style="-fx-background-color: #fafafa; -fx-text-fill: #37474f; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 0 16; -fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, #10000000, 1, 0, 0, 1);" />
                        </VBox>

                        <!-- Login Button -->
                        <Button fx:id="btnButton" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="48.0" prefWidth="356.0" style="-fx-background-color: linear-gradient(to bottom right, #4caf50 0%, #45a049 100%); -fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 16px; -fx-background-radius: 12; -fx-cursor: hand; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, rgba(76,175,80,0.3), 12, 0, 2, 6);" text="ðŸš€ Login">
                            <VBox.margin>
                                <Insets top="8.0" />
                            </VBox.margin>
                        </Button>

                        <!-- Separator -->
                        <Separator prefWidth="356.0" style="-fx-background-color: #e0e0e0; -fx-pref-height: 1;" />

                        <!-- Additional Options -->
                        <VBox alignment="CENTER" spacing="12.0" style="-fx-padding: 16 0 0 0;">
                            <children>
                                <Label fx:id="forogotPasssword" style="-fx-text-fill: #e91e63; -fx-font-size: 14px; -fx-font-weight: 500; -fx-font-family: 'Segoe UI'; -fx-cursor: hand; -fx-background-color: transparent;" text="Forgot your password?" />
                                <HBox alignment="CENTER" spacing="8.0" />
                            </children>
                        </VBox>

                        <!-- Security Badge -->
                        <HBox alignment="CENTER" spacing="8.0" style="-fx-padding: 16 0 0 0;">
                            <children>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                     
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Footer -->
                <HBox alignment="CENTER" spacing="16.0">
                    <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>

                            </image>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
